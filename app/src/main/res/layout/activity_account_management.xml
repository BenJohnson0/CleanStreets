<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimary"
    android:padding="16dp"
    tools:ignore="ScrollViewSize">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/secondary_lb"
        android:contentDescription="@string/cleanstreets_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/be_yourself"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:textStyle="italic"
        android:layout_marginBottom="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/text_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/username" />

            <EditText
                android:id="@+id/edit_text_name"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:backgroundTint="#807A77"
                android:textColorHint="#807A77"
                android:textColor="@color/colorPrimaryDark"
                android:hint="@string/new_username_here"
                android:inputType="text"
                android:autofillHints="username" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/text_view_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/email" />

            <EditText
                android:id="@+id/edit_text_email"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:backgroundTint="#807A77"
                android:textColorHint="#807A77"
                android:textColor="@color/colorPrimaryDark"
                android:hint="@string/new_email_here"
                android:inputType="textEmailAddress"
                android:autofillHints="emailAddress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/text_view_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/password" />

            <EditText
                android:id="@+id/edit_text_password"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:backgroundTint="#807A77"
                android:textColorHint="#807A77"
                android:textColor="@color/colorPrimaryDark"
                android:inputType="textPassword"
                android:hint="@string/new_password_here"
                android:autofillHints="password" />
        </LinearLayout>

        <Button
            android:id="@+id/button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:background="@drawable/round_corner"
            android:textSize="23sp"
            app:backgroundTint="@color/colorSecondary"
            android:text="@string/update_username"
            />

        <Button
            android:id="@+id/button_change_password"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_corner"
            android:textSize="23sp"
            app:backgroundTint="@color/colorSecondary"
            android:text="@string/change_password" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_corner"
            android:textSize="23sp"
            app:backgroundTint="@color/colorSecondary"
            android:text="@string/delete_account" />
    </LinearLayout>
</LinearLayout>
