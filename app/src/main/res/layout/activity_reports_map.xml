<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161A67"
    android:orientation="vertical"
    android:gravity="center">

    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/secondary_lb"
            android:contentDescription="@string/cleanstreets_logo" />

        <Button
            android:id="@+id/buttonNearest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/find_nearest_report"
            android:textSize="23sp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/colorSecondary"
            android:textColor="@color/colorPrimaryDark"
            app:background="@drawable/round_corner"/>

    </LinearLayout>

</LinearLayout>
